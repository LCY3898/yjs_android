<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:id="@+id/viewToShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/flShareBg"
            android:layout_width="fill_parent"
            android:layout_height="250dip"
            android:background="@drawable/bg_congra">

            <ImageView
                android:id="@+id/ivheadBg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/exer_tx" />

            <com.cy.widgetlibrary.view.CustomCircleImageView
                android:id="@+id/shareHead"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="47dp"
                android:src="@drawable/head" />

            <TextView
                android:id="@+id/tvSharehead"
                android:layout_width="132dp"
                android:layout_height="24dp"
                android:layout_below="@id/ivheadBg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/bg_user"
                android:textColor="#ff7f00"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvRuningshare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flShareBg"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="消耗热量234cal，打败全国23%的用户"
            android:textColor="#009dc0"
            android:textSize="16sp" />


    </LinearLayout>

    <include
        layout="@layout/view_share_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />


    <include layout="@layout/view_share_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>