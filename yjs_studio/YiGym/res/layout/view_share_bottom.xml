<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:padding="10dip"
    android:background="#05bce1">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:background="@drawable/yjs_logo"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:id="@+id/rlYunDong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dip"
        android:layout_toRightOf="@+id/logo">
        <TextView
            android:id="@+id/aiYunDong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="爱运动 爱"
            android:textSize="@dimen/sp14"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/aiYunDong"
            android:text="e健身"
            android:textSize="@dimen/sp14"
            android:textColor="#228fc1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="最有爱的运动app"
            android:textSize="@dimen/sp10"
            android:textColor="#fff"
            android:layout_below="@+id/aiYunDong"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/download_qrcode"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginLeft="60dip"
        android:background="@drawable/yjs_logo"
        android:layout_toRightOf="@+id/rlYunDong"/>
</RelativeLayout>
