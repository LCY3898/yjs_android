<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/imgAvatar"
        style="@style/im_chat_img_avatar_style"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/txtNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/txtChatTime"
        android:layout_toRightOf="@+id/imgAvatar"
        android:singleLine="true"
        android:text="nicknamesdfdsfsdfsdfsfsddfsdfsdfsfsfw"
        android:textColor="#ff282829"
        android:textSize="@dimen/sp18" />

    <com.cy.yigym.view.content.emoji.EmojiTextView
        android:id="@+id/txtMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNickName"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/imgAvatar"
        android:singleLine="true"
        android:text="msg"
        android:textColor="#ff9e9e9e"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/txtChatTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:singleLine="true"
        android:text="2014-05-01 10:20"
        android:textColor="#ff9e9e9e"
        android:textSize="@dimen/sp16" />

</merge>