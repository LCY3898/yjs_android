<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffffff">
    <TextView
        android:id="@+id/tvTimeSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="请选择时间"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/sp20" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tvTimeSet"
        android:layout_marginTop="10dp"
        android:background="@color/devide_line"></View>
<RelativeLayout
    android:id="@+id/rlTimePicker"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/tvTimeSet">
<DatePicker
    android:id="@+id/dpDatePicker"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:calendarViewShown="false"></DatePicker>
    <TimePicker
        android:id="@+id/tpTimerPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/dpDatePicker"
        ></TimePicker>
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rlTimePicker"
        android:background="@color/devide_line"></View>

</RelativeLayout>
