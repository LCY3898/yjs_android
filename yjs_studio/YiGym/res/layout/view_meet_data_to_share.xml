<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="328dp"
        android:background="@drawable/cat_fc">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <com.cy.widgetlibrary.view.CustomCircleImageView
                android:id="@+id/SendHead"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dip"
                android:src="@drawable/head" />

            <com.cy.widgetlibrary.view.CustomCircleImageView
                android:id="@+id/receiverHead"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_toRightOf="@+id/SendHead"
                android:src="@drawable/head" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvMeetContent"
            android:layout_width="200dip"
            android:layout_height="40dip"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_meet"
            android:gravity="center"
            android:text="会面成功"
            android:layout_alignParentBottom="true"
            android:textColor="#ea647a"
            android:textSize="@dimen/sp15" />
    </RelativeLayout>

    <include
        layout="@layout/view_share_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <include
        layout="@layout/view_share_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
