<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlAllDataShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip" >

        <com.cy.yigym.view.CustomRoundedDrawableImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/bg_fenxiang" />

        <TextView
            android:id="@+id/tvcontext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dip"
            android:text="已在e健身锻炼"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/tvSportNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvcontext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:text="9"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp18" />

        <com.cy.widgetlibrary.view.CustomCircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ccvMyHead"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_below="@+id/tvSportNum"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            app:border_color="#ff69717c"
            app:border_width="3dp" />

        <TextView
            android:id="@+id/tvMyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ccvMyHead"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:textColor="#ffced8e2"
            android:textSize="@dimen/sp18"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMyName"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="10dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivTime"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_total_time" />

                <TextView
                    android:id="@+id/tvAllTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dip"
                    android:text=""
                    android:textColor="#ffedf0f5"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dip"
                    android:text="总时长"
                    android:textColor="#ff5b677f"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivDis"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_total_distance" />

                <TextView
                    android:id="@+id/tvAllDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dip"
                    android:text=""
                    android:textColor="#ffedf0f5"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dip"
                    android:text="总距离"
                    android:textColor="#ff5b677f"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivCal"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ic_total_calorie" />

                <TextView
                    android:id="@+id/tvAllCalrie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dip"
                    android:text=""
                    android:textColor="#ffedf0f5"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dip"
                    android:text="总消耗"
                    android:textColor="#ff5b677f"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llShareView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:background="@android:color/white"
        android:paddingBottom="20dip" >

        <com.cy.yigym.view.content.ShareView
            android:id="@+id/svAllDataToShare"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dip" />
    </LinearLayout>

</LinearLayout>