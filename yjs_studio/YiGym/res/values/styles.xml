        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="toolbar_text">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">@color/toolbar_text_selector</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_user_info1">
        <item name="android:textColor">#353535</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="tv_user_info2">
        <item name="android:textColor">#ffecf1f7</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_user_info">
        <item name="android:textColor">#ff5b6a7f</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="sep_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dip</item>
        <item name="android:layerType">software</item>
        <item name="android:background">@drawable/dive_line_shapes</item>
