<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.












    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.












        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="NoTitleBar" parent="android:Theme.NoTitleBar"></style>

    <style name="ButtomBar">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ButtomBarImgBtn">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="top_private_chat">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@drawable/news_topbar_font</item>
        <item name="android:background">@drawable/notify_01</item>
    </style>

    <style name="top_inform_news">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@drawable/news_topbar_font</item>
        <item name="android:background">@drawable/notify_01</item>
    </style>

    <!-- 分享弹窗样式 -->
    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="Dialog">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!-- 动画 -->

    <style name="popStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/popup_enter</item>
  //进入时的动画
 <item name="@android:windowExitAnimation">@anim/popup_exit</item>
    //退出时的动画
</style>

    <style name="editor_style">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ff424141</item>
        <item name="android:textColorHint">#ff999999</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
    </style>

    <style name="tv_person_info">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sub_text_color</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:drawablePadding">6dp</item>
        <!-- <item name="android:drawableLeft">@drawable/msg_next</item> -->
    </style>

    <style name="toolbar_item">
