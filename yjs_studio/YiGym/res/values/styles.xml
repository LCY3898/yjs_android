    </style>

    <style name="goal_lable_style">
        <item name="android:background">@drawable/btn_goal_selector</item>
        <item name="android:textColor">@color/goal_text_selector</item>
        <item name="android:textSize">17.0sp</item>
    </style>

    <!-- ＃＃＃＃＃运动分享界面的相关设置 -->
    <style name="share_sport_data_style">
        <item name="android:layout_width">match_parent</item>
