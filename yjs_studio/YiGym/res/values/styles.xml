    <!-- ＃＃＃＃运动分享界面end -->
    <!-- #############IM start############# -->
    <style name="im_chat_text_date_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:background">@drawable/im_chat_time_shape</item>
    </style>

    <style name="im_chat_text_msg_style">
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textColor">#ff545454</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:maxWidth">225dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="im_chat_img_avatar_style">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:src">@drawable/head</item>
    </style>
    <!-- #############IM end############# -->


